<UserControl x:Class="MakeEscena.CtrlTarget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Height="40" Width="40"  Cursor="Hand" ForceCursor="True" >
  
  <Grid x:Name="Frame" >
    <Border    x:Name="Circle1" BorderBrush="#FF631201" Height="30" Width="30" BorderThickness="1" CornerRadius="20" Canvas.Left="5"  Canvas.Top="5" />
    <Border    x:Name="Circle2" BorderBrush="#FF631201" Height="20" Width="20" BorderThickness="1" CornerRadius="10" Canvas.Left="10" Canvas.Top="10" />
    <TextBlock x:Name="Info" Text="0" Foreground="#FF631201" VerticalAlignment="Center" HorizontalAlignment="Center"  FontStretch="Condensed" LineHeight="12" />
  </Grid>
  
</UserControl>
